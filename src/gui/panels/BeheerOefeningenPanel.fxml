<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<fx:root id="AnchorPane" prefHeight="400.0" prefWidth="600.0" type="AnchorPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="BOTTOM_LEFT" prefHeight="74.0" prefWidth="600.0">
               <children>
                  <Button fx:id="createOefening" mnemonicParsing="false" onAction="#createOefeningClicked" prefHeight="27.0" prefWidth="167.0" text="Maak nieuwe oefening">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" />
                     </HBox.margin>
                  </Button>
                  <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="429.0">
                     <children>
                        <Button fx:id="keerTerugBtn" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Terug naar Menu">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="62.0" prefWidth="600.0">
               <children>
                  <TextField fx:id="filterText" onKeyReleased="#filter" promptText="Filter oefeningen...">
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="260.0" prefWidth="600.0">
               <children>
                  <TableView fx:id="oefeningenTable" prefHeight="226.0" prefWidth="602.0">
                    <columns>
                      <TableColumn fx:id="opgaveCol" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="253.0" text="Opgave" />
                      <TableColumn fx:id="vakCol" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="98.0" text="Vak" />
                        <TableColumn fx:id="doelstellingenCol" prefWidth="238.0" text="Doelstellingen" />
                    </columns>
                     <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="detailsBtn" mnemonicParsing="false" onAction="#detailsBtnClicked" text="Details">
                     <HBox.margin>
                        <Insets top="5.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</fx:root>
